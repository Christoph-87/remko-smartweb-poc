# REMKO SmartWeb credentials
REMKO_EMAIL=your@email
REMKO_PASS=yourPassword

# Device selection
REMKO_DEVICE_NAME="YOUR DEVICE NAME"

# Read status (optional)
REMKO_ESP_STATUS=1
REMKO_READ_SUMMARY=1

# Set values (optional)
REMKO_SET_POWER=on
REMKO_SET_MODE=cool
REMKO_SETPOINT=22.0
REMKO_SET_FAN=medium
REMKO_SET_SWING=vertical
REMKO_SET_ECO=off
REMKO_SET_TURBO=off
REMKO_SET_SLEEP=off
REMKO_SET_BIOCLEAN=off
REMKO_READBACK_AFTER_SET=1

# UART frame (captured from Web UI /ESP message)
REMKO_TX_HEX=AA24AC...
REMKO_TX_CLIENT_ID=SMTACUARTTEST

# Optional
REMKO_NO_RESPONSE_OK=1
REMKO_TIMEOUT_SEC=15
REMKO_CONNECT_TIMEOUT_SEC=8
